{
  "name": "ebenezer-server",
  "version": "1.0.0",
  "private": true,
  "main": "src/index.js",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "babel-node": "^0.0.1-security",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.4.2",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "pg": "^8.5.1",
    "rimraf": "^3.0.2"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src"
    ]
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "transpile": "babel ./src --out-dir ./dist",
    "build": "npm-run-all clean transpile",
    "serve": "PORT=8080 node -r dotenv/config ./dist/bin/www dotenv_config_path=../.env",
    "dev": "NODE_ENV=development npm-run-all build serve",
    "prod": "NODE_ENV=production npm-run-all build serve",
    "watch": "nodemon"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "esmodules": true,
            "node": true
          }
        }
      ]
    ]
  }
}
