{
  "name": "ebenezer-scrooge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "server:clean": "rimraf ./dist-server",
    "server:transpile": "babel ./server --out-dir ./dist-server",
    "server:build": "npm-run-all server:clean server:transpile",
    "server:serve": "node -r dotenv/config ./dist-server/bin/www",
    "server:dev": "NODE_ENV=development npm-run-all server:build server:serve",
    "server:prod": "NODE_ENV=production npm-run-all server:build server:serve",
    "server:watch": "nodemon",
    "heroku-postbuild": "run-p build && npm run server:build"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "esmodules": true,
            "node": true
          }
        }
      ]
    ]
  },
  "nodemonConfig": {
    "exec": "npm run server:dev",
    "watch": [
      "server"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "axios": "^0.21.0",
    "babel-node": "^0.0.1-security",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase": "^8.2.1",
    "firebase-admin": "^9.4.2",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "pg": "^8.5.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.13.0",
    "react-scripts": "4.0.1",
    "rimraf": "^3.0.2",
    "web-vitals": "^0.2.4"
  }
}
